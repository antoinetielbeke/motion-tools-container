# NGINX Server Configuration for Antragsgruen
# This file can be customized via ConfigMap in Kubernetes

upstream php-fpm {
    server ${PHP_FPM_HOST}:${PHP_FPM_PORT};
    keepalive 16;
}

# Rate limiting zones
limit_req_zone $binary_remote_addr zone=general:10m rate=${NGINX_RATE_LIMIT};
limit_req_zone $binary_remote_addr zone=api:10m rate=60r/m;

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name ${NGINX_SERVER_NAME};
    root /var/www/html/web;
    index index.php index.html;

    # Charset
    charset utf-8;

    # Logging
    access_log /var/log/nginx/access.log main;
    error_log  /var/log/nginx/error.log ${NGINX_LOG_LEVEL};

    # Rate limiting
    limit_req zone=general burst=${NGINX_RATE_LIMIT_BURST} nodelay;

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }

    # PHP-FPM status endpoints (for monitoring)
    location ~ ^/(fpm-status|fpm-ping)$ {
        access_log off;
        allow 127.0.0.1;
        allow 10.0.0.0/8;
        allow 172.16.0.0/12;
        allow 192.168.0.0/16;
        deny all;

        include fastcgi_params;
        fastcgi_pass php-fpm;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }

    # Block access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ ^/(config|runtime|vendor|node_modules|tests|docs)/ {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Block access to sensitive file types
    location ~* \.(yml|yaml|json|lock|md|dist|sh|sql|bak|swp|tmp)$ {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Static files caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|webp)$ {
        expires 7d;
        add_header Cache-Control "public, immutable";
        access_log off;
        try_files $uri =404;
    }

    # Assets directory
    location /assets/ {
        expires 7d;
        add_header Cache-Control "public";
        access_log off;
        try_files $uri =404;
    }

    # Robots.txt
    location = /robots.txt {
        access_log off;
        log_not_found off;
        try_files $uri =404;
    }

    # Favicon
    location = /favicon.ico {
        access_log off;
        log_not_found off;
        try_files $uri =404;
    }

    # API endpoints with different rate limiting
    location /rest/ {
        limit_req zone=api burst=10 nodelay;
        try_files $uri /index.php$is_args$args;
    }

    # Main application location
    location / {
        # Try to serve file directly, fallback to front controller
        try_files $uri /index.php$is_args$args;
    }

    # PHP-FPM processing
    location ~ \.php$ {
        # Security: Don't allow arbitrary PHP execution
        try_files $uri =404;

        # FastCGI configuration
        include fastcgi_params;
        fastcgi_pass php-fpm;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_param DOCUMENT_ROOT $document_root;

        # Increase timeouts for long-running operations
        fastcgi_connect_timeout ${NGINX_FASTCGI_CONNECT_TIMEOUT};
        fastcgi_send_timeout    ${NGINX_FASTCGI_SEND_TIMEOUT};
        fastcgi_read_timeout    ${NGINX_FASTCGI_READ_TIMEOUT};

        # Buffer configuration
        fastcgi_buffer_size          32k;
        fastcgi_buffers              16 32k;
        fastcgi_busy_buffers_size    64k;
        fastcgi_temp_file_write_size 64k;

        # Prevent httpoxy vulnerability
        fastcgi_param HTTP_PROXY "";

        # Enable keepalive to PHP-FPM
        fastcgi_keep_conn on;
    }

    # Deny all other .php files in subdirectories (security)
    location ~* ^.+\.php/.*$ {
        deny all;
    }
}

